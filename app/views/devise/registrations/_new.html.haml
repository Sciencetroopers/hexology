#sign-up-form
  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = f.error_notification
    .form-inputs
      = f.input :email, required: true, autofocus: true, required: true
      = f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), required: true
      = f.input :password_confirmation, required: true
    .form-actions
      = f.button :submit, "Sign up", class: "button"
